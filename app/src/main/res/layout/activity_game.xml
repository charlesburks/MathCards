<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.charlesburks.mathcards.Game">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:background="#ffb0b0b0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playBtt"
        android:textSize="20sp"
        android:background="@drawable/play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp"
        android:layout_marginEnd="90dp"
        android:layout_above="@+id/radioGroup"
        android:layout_below="@+id/questionTxt"
        android:onClick="buttonClick2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aRadBtt"
        android:layout_below="@+id/playBtt"
        android:layout_alignLeft="@+id/my_spinner"
        android:layout_alignStart="@+id/my_spinner"
        android:layout_marginTop="43dp"
        android:onClick="buttonClick3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bRadBtt"
        android:layout_below="@+id/aRadBtt"
        android:layout_alignLeft="@+id/aRadBtt"
        android:layout_alignStart="@+id/aRadBtt"
        android:onClick="buttonClick3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cRadButt"
        android:layout_below="@+id/bRadBtt"
        android:layout_alignLeft="@+id/bRadBtt"
        android:layout_alignStart="@+id/bRadBtt"
        android:onClick="buttonClick3" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dRadBtt"
        android:layout_below="@+id/cRadButt"
        android:layout_alignLeft="@+id/cRadButt"
        android:layout_alignStart="@+id/cRadButt"
        android:onClick="buttonClick3" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterBtt"

        android:textSize="20sp"
        android:background="@drawable/enter"
        android:layout_above="@+id/scoreTxt"
        android:onClick="buttonCLick4"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/scoreTxt"
        android:textSize="26sp"
        android:background="#ff8ebfff"
        android:textColor="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="______"
        android:id="@+id/questionTxt"
        android:textSize="26sp"
        android:layout_below="@+id/my_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

</RelativeLayout>
